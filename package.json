{
  "name": "homebridge-lennox-icomfort",
  "version": "0.0.1",
  "description": "Homebridge plugin for Lennox iComfort thermostats",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "npm run build && npm link && nodemon",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"*.md\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"*.md\"",
    "format:md": "prettier --write \"*.md\"",
    "format:md:check": "prettier --check \"*.md\"",
    "test": "echo \"No tests specified\" && exit 0",
    "prepare": "husky install",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "homebridge-plugin",
    "homebridge",
    "lennox",
    "icomfort",
    "thermostat"
  ],
  "engines": {
    "homebridge": "^1.8.0 || ^2.0.0-beta.0",
    "node": ">=18.0.0 <23.0.0"
  },
  "author": "ellisvalentiner",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ellisvalentiner/homebridge-lennox-icomfort.git"
  },
  "bugs": {
    "url": "https://github.com/ellisvalentiner/homebridge-lennox-icomfort/issues"
  },
  "homepage": "https://github.com/ellisvalentiner/homebridge-lennox-icomfort#readme",
  "dependencies": {
    "axios": "^1.6.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^8.54.0",
    "homebridge": "^2.0.0-beta.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}


